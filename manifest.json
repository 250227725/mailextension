{
    "manifest_version": 3,
    "name": "Message dublicate destroyer",
    "version": "1.0",
    "description": "Extension for removing dublicate messages.",
    "author": "Sergei Azarov",
    "permissions": [
        "storage",
        "accountsRead",
        "messagesRead",
        "messagesUpdate",
        "messagesDelete",
        "messagesMove",
        "messagesTagsList"
    ],
    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "message-modifier@example.com",
            "strict_min_version": "115.0"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "action": {
        "default_icon": {
            "48": "icons/icon.png"
        },
        "default_title": "Message Modifier"
    },
    "icons": {
        "48": "icons/icon.png"
    }
}
